@model dynamic
@{
    Layout = null;
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Previous button (only visible if not on the first page) -->
        @if (Model.Index > 0)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(ViewData["ActionName"].ToString(), ViewData["ControllerName"].ToString(), new { page = Model.Index - 1, pageSize = Model.Size })" aria-label="Önceki">
                    <span aria-hidden="true" style="color:blueviolet; font-weight:bold;"><i class="bi bi-arrow-left-circle"></i>

            </span>
                </a>
            </li>
        }

        <!-- Page numbers -->
        @for (int i = 0; i <= Model.Pages; i++)
        {
            <li class="page-item @(i == Model.Index ? "active" : "")">
                <a class="page-link" href="@Url.Action(ViewData["ActionName"].ToString(), ViewData["ControllerName"].ToString(), new { page = i, pageSize = Model.Size })">@(i + 1)</a>
            </li>
        }

        <!-- Next button (only visible if not on the last page) -->
        @if (Model.Index < Model.Pages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action(ViewData["ActionName"].ToString(), ViewData["ControllerName"].ToString(), new { page = Model.Index + 1, pageSize = Model.Size })" aria-label="Sonraki">
                    <span aria-hidden="true" style="color:blueviolet; font-weight:bold;"><i class="bi bi-arrow-right-circle"></i></span>
                </a>
            </li>
        }
    </ul>
</nav>
