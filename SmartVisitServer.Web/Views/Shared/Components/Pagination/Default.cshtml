@model SmartVisitServer.Web.Models.Paginate.PagedList<object>
@{
    var actionName = ViewData["ActionName"]?.ToString() ?? "Index";
    var controllerName = ViewData["ControllerName"]?.ToString() ?? "Home"; // Varsayılan olarak "Home" kullanılıyor
}

<nav aria-label="Page navigation">
    <ul class="pagination">
        <!-- Önceki Sayfa Linki -->
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="@actionName" asp-controller="@controllerName" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        }

        <!-- Sayfa Numaraları -->
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="@actionName" asp-controller="@controllerName" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <!-- Sonraki Sayfa Linki -->
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <button class="page-link" asp-action="@actionName" asp-controller="@controllerName" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</button>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        }
    </ul>
</nav>
